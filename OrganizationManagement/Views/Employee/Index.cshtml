@model IEnumerable<EmployeeDetails>

<h1>Employees</h1>

<p>
    <a href="@Url.Action("Create", "Employee")">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Position</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Department</td>
                <td>@employee.Position</td>
                <td>@employee.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Details", "Employee", new { id = employee.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
